# EditorConfig is awesome: https://EditorConfig.org

[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 4
insert_final_newline = true

[*.yml]
indent_style = space
indent_size = 2
insert_final_newline = true

[*.markdown]
indent_style = space
indent_size = 2
insert_final_newline = true

[*.md]
indent_style = space
indent_size = 2
insert_final_newline = true

# Ignore paths
[/assets/styles/app.scss]
charset = unset
end_of_line = unset
insert_final_newline = unset
trim_trailing_whitespace = unset
indent_style = unset
indent_size = unset
